<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context=".SignInActivity">

    <!-- Login to your account -->
    <TextView
        android:id="@+id/id_login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Login to your account"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/id_login_detail_text"
        android:layout_below="@id/id_login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Welcome back, you've been missed!"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:singleLine="true"
        android:id="@+id/id_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_login_detail_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="#08000000"
        android:fontFamily="@font/poppins"
        android:textSize="14dp"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="12dp"
        android:padding="20dp" />

    <EditText
        android:id="@+id/id_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_edit_email"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#08000000"
        android:fontFamily="@font/poppins"
        android:textSize="14dp"
        android:hint="Password"
        android:ellipsize="start"
        android:gravity="start"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="12dp"
        android:padding="20dp" />
    
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_btn_login"
        android:layout_below="@id/id_edit_password"
        android:text="LOGIN"
        android:fontFamily="@font/poppins_medium"
        android:letterSpacing="0.06"
        android:backgroundTint="#5193F2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/login_bottom_text"
        android:layout_below="@id/id_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Don't have an account? Sign up"
        android:textColor="#333"
        android:textSize="13dp" />


</RelativeLayout>